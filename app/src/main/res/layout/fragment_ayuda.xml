<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="219dp"
        android:layout_weight=".5">

        <ImageView
            android:id="@+id/ivreporte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/reporte" />

        <Button
            android:id="@+id/btn_Crear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#68000000"
            android:text="¿Cómo crear un reporte?"
            android:textColor="#ffffff"
            android:textSize="30dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="231dp"
        android:layout_weight=".5">

        <ImageView
            android:id="@+id/ivpanico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/panico" />

        <Button
            android:id="@+id/btn_Panico"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#68000000"
            android:text="¿Cómo funciona el boton de pánico ?"
            android:textColor="#ffffff"
            android:textSize="30dp" />

    </RelativeLayout>
</LinearLayout>
